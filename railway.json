{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npx prisma generate"
  },
  "deploy": {
    "startCommand": "npx prisma db push && npm run build && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "family-gnucash",
      "source": {
        "repo": "https://github.com/yourusername/family-gnucash"
      },
      "envVars": {
        "NODE_ENV": "production",
        "PORT": "${{PORT}}"
      }
    }
  ]
}