// scripts/build.js
// Custom build script that ensures dependencies are installed

const { execSync } = require('child_process');
const fs = require('fs');

console.log('ğŸ—ï¸  Custom build process starting...\n');

// Step 1: Check if node_modules exists
if (!fs.existsSync('node_modules')) {
  console.log('ğŸ“¦ node_modules not found, installing dependencies...');
  execSync('npm install --legacy-peer-deps', { stdio: 'inherit' });
} else {
  console.log('âœ… node_modules exists');
  
  // Check if next is installed
  if (!fs.existsSync('node_modules/next')) {
    console.log('âŒ Next.js not found, installing dependencies...');
    execSync('npm install --legacy-peer-deps', { stdio: 'inherit' });
  }
}

// Step 2: Setup environment
console.log('\nğŸ”§ Setting up environment...');
require('./setup-env');

// Step 3: Generate Prisma client
console.log('\nğŸ“Š Generating Prisma client...');
execSync('npx prisma generate', { stdio: 'inherit' });

// Step 4: Build Next.js
console.log('\nğŸš€ Building Next.js application...');
execSync('npx next build', { stdio: 'inherit' });

console.log('\nâœ… Build complete!');
